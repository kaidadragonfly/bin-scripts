#!/bin/bash 

export EDITOR='emacs'
export GIT_EDITOR='vim'
#export LESS=" --raw-control-chars --no-init ${LESS}"
# Try this if there is trouble.
export LESS=" --RAW-CONTROL-CHARS --no-init ${LESS}"
export PAGER='less'

# Add /opt/bin/ to the front of the PATH if it exists.
if [ -d "/opt/bin" ]; then
    PATH="/opt/bin:$PATH"
fi

# Add ~/.local/bin/ to the front of the PATH if it exists.
if [ -d "$HOME/.local/bin" ]; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Add ~/bin/ to the front of the PATH if it exists.
if [ -d "$HOME/bin" ]; then
    PATH="$HOME/bin:$PATH"
fi

# Add ~/bin/vm to the front of the PATH if it exists.
if [ -d "$HOME/bin/vm" ]; then
    PATH="$HOME/bin/vm:$PATH"
fi

# Add ~/bin/local to the front of the PATH if it exists.
if [ -d "$HOME/bin/local" ]; then
    PATH="$HOME/bin/local:$PATH"
fi

export PATH

# Below relies on a properly exported path variable.
if [[ -x $(which src-hilite-lesspipe.sh) ]]; then
    export LESSOPEN="| src-hilite-lesspipe.sh %s"
fi

export PYTHONPATH=.

export SHELLCHECK_OPTS="-e SC1090 -e SC1091 -e SC2001 -e SC2012"
